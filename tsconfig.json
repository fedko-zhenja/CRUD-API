{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "allowJs": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "src/*"
            ]
        },
    },
    "include": [
        "src/**/*",
        "tests",
        "./.eslintrc.json"
    ],
    "exclude": [
        "node_modules"
    ]
}